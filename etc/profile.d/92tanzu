TANZU_REPOS=$ME_SRC_DIR/github.com/vmware-tanzu
ME_PATH+=:$STEELTOE_INCUBATOR_REPOS/tanzu-thingies/bin

alias -g vtr=$TANZU_REPOS
alias -g dtc=$TANZU_REPOS/tanzu-developer-tools-for-vscode
alias -g dtj=$TANZU_REPOS/tanzu-developer-tools-for-intellij
alias -g dtl=$TANZU_REPOS/tanzu-developer-tools-language-server
alias -g dts=$TANZU_REPOS/tanzu-developer-tools-for-visual-studio
alias -g aas=$TANZU_REPOS/application-accelerator-samples

alias twl="tanzu apps workload list"
alias twg="tanzu apps workload get"
alias twd="tanzu apps workload delete"
alias twt="tanzu apps workload tail --timestamp"


tz() {
  echo % tanzu $*
  tanzu $*
}
