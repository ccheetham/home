# =============================================================================
# zsh theme
# =============================================================================

pure=~/var/repos/pure
zsh_syntax_highlighting=$ME_REPO_DIR/zsh-syntax-highlighting

cd ~/.zfunctions >/dev/null
if [ -d ../var/repos/pure ]; then
  ln -sf ../var/repos/pure/pure.zsh prompt_pure_setup
  ln -sf ../var/repos/pure/async.zsh async
  PURE_PROMPT_SYMBOL=%%
  zstyle :prompt:pure:prompt:success color 114
  zstyle :prompt:pure:git:arrow color 215
  prompt pure
else
  echo "$(basename $pure) not installed; run 'refresh repos'"
fi
cd - >/dev/null

# sysntax highlighting should be last sourced
if [ -d $zsh_syntax_highlighting ]; then
  source $zsh_syntax_highlighting/zsh-syntax-highlighting.zsh
else
  echo "$(basename $zsh_syntax_highlighting) not installed; run 'refresh repos'"
fi

# vim: ft=zsh
