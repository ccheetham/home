! -- font settings --------------------------------------------------------

Xft.autohint: true
Xft.antialias: true
Xft.hinting: true
Xft.hintstyle: hintslight
!Xft.dpi: 300
Xft.rgba: rgb
Xft.lcdfilter: lcddefault


! -- Solarized (https://github.com/solarized/xresources) ---------------------

#include "var/repo/color-scheme/xresources/cheetos"


! -- basic xterm -------------------------------------------------------------

XTerm*faceName:             xft:DejaVu Sans Mono:pixelsize=13
XTerm*pointerMode:          1

XTerm*toolBar:              false

XTerm*scrollBar:            true
XTerm*rightScrollBar:       true
XTerm*scrollKey:            true
XTerm*scrollTtyOutput:      false
XTerm*allowScrollLock:      false

XTerm*visualBell:           true
XTerm*altIsNotMeta:         true
XTerm*altSendsEscape:       true


! -- logging terms -----------------------------------------------------------

log*geometry:               120x20
log*faceSize:               8

! -- task warrior terms ------------------------------------------------------

task*geometry:              80x80+0+0
task*faceName:              xft:Courier New:italic:pixelsize=10
task*scrollBar:             false
