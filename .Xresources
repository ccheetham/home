XTerm*faceName:                Inconsolata
XTerm*faceSize:                10
XTerm*pointerMode:             1

XTerm*toolBar:                 false

XTerm*scrollBar:               true
XTerm*rightScrollBar:          true
XTerm*scrollKey:               true
XTerm*scrollTtyOutput:         false
XTerm*allowScrollLock:         false

XTerm*visualBell:              true
XTerm*altIsNotMeta:            true
XTerm*altSendsEscape:          true

wheel*background:              darkred

log*foreground:                dark khaki
log*geometry:                  120x20
log*faceSize:                  8


ncss*foreground:               cornsilk

mail*scrollBar:                false
mail*termName:                 xterm-256color
mail*title:                    Mail


#include "var/repo/tomorrow-theme/Xdefaults/XresourceTomorrowNight"


! font settings --------------------------------------------------------------

Xft.autohint: true
Xft.antialias: true
Xft.hinting: true
Xft.hintstyle: hintslight
!Xft.dpi: 96
Xft.rgba: rgb
Xft.lcdfilter: lcddefault

! xscreensaver ---------------------------------------------------------------

!font settings
!xscreensaver.Dialog.headingFont:        -*-incolsolata-medium-r-*-*-14-*-*-*-*-*-*-*
!xscreensaver.Dialog.bodyFont:           -*-incolsolata-medium-r-*-*-14-*-*-*-*-*-*-*
!xscreensaver.Dialog.labelFont:          -*-incolsolata-medium-r-*-*-14-*-*-*-*-*-*-*
!xscreensaver.Dialog.unameFont:          -*-incolsolata-medium-r-*-*-14-*-*-*-*-*-*-*
!xscreensaver.Dialog.buttonFont:         -*-incolsolata-medium-r-*-*-14-*-*-*-*-*-*-*
!xscreensaver.Dialog.dateFont:           -*-incolsolata-medium-r-*-*-12-*-*-*-*-*-*-*
!xscreensaver.passwd.passwdFont:         -*-incolsolata-medium-r-*-*-14-*-*-*-*-*-*-*
!general dialog box (affects main hostname, username, password text)
xscreensaver.Dialog.foreground:         #101010
xscreensaver.Dialog.background:         #D8D8D8
xscreensaver.Dialog.topShadowColor:     #D8D8D8
xscreensaver.Dialog.bottomShadowColor:  #D8D8D8
xscreensaver.Dialog.Button.foreground:  #101010
xscreensaver.Dialog.Button.background:  #E5E5E5
!username/password input box and date text colour
xscreensaver.Dialog.text.foreground:    #101010
xscreensaver.Dialog.text.background:    #E5E5E5
xscreensaver.Dialog.internalBorderWidth:24
xscreensaver.Dialog.borderWidth:        0
xscreensaver.Dialog.shadowThickness:    2
!timeout bar (background is actually determined by Dialog.text.background)
xscreensaver.passwd.thermometer.foreground:  #101010
xscreensaver.passwd.thermometer.background:  #2E2E2E
xscreensaver.passwd.thermometer.width:       8
