Xft.autohint: true
Xft.antialias: true
Xft.hinting: true
Xft.hintstyle: hintslight
!Xft.dpi: 300
Xft.rgba: rgb
Xft.lcdfilter: lcddefault

#include "var/repo/color-scheme/xresources/cheetos"

! -- basic xterm -------------------------------------------------------------

xterm*faceName:             xft:DejaVu Sans Mono:pixelsize=11
xterm*pointerMode:          1

xterm*toolBar:              false

xterm*saveLines:            10000
xterm*scrollBar:            true
xterm*rightScrollBar:       true
xterm*scrollKey:            true
xterm*scrollTtyOutput:      false
xterm*allowScrollLock:      false

xterm*visualBell:           true
xterm*altIsNotMeta:         true
xterm*altSendsEscape:       true


! -- logging terms -----------------------------------------------------------

task*faceName:              xft:Courier New:pixelsize=8

! -- task warrior terms ------------------------------------------------------

task*geometry:              80x80+0+0
task*faceName:              xft:Courier New:italic:pixelsize=10
task*scrollBar:             false
