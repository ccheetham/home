Xft.autohint: true
Xft.antialias: true
Xft.hinting: true
Xft.hintstyle: hintslight
Xft.rgba: rgb
Xft.lcdfilter: lcddefault

#include "share/x/OneHalfDark.Xresources"

! -- basic xterm -------------------------------------------------------------

xterm*faceName:             xft:Monaco Nerd Font:pixelsize=12
xterm*pointerMode:          1

xterm*toolBar:              false

xterm*saveLines:            10000
xterm*scrollBar:            true
xterm*rightScrollBar:       true
xterm*scrollKey:            true
xterm*scrollTtyOutput:      false
xterm*allowScrollLock:      false

xterm*visualBell:           true
xterm*altIsNotMeta:         true
xterm*altSendsEscape:       true

! -- logging terms -----------------------------------------------------------

log*faceName:              xft:Courier New:pixelsize=8

! -- task warrior terms ------------------------------------------------------

task*geometry:              80x80+0+0
task*faceName:              xft:Courier New:italic:pixelsize=10
task*scrollBar:             false
