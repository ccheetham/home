# Enable messages about what your character hears
OPTIONS=acoustics

# Your starting alignment
OPTIONS=align:random

# Automatically describe the terrain under cursor when asked to get a location on the map
OPTIONS=autodescribe

# Automatically dig, if you're wielding a digging tool and moving into a place that can be dug
OPTIONS=!autodig

# Walking into a door attempts to open it
OPTIONS=autoopen

# Automatically pick up things onto which you move (see https://nethackwiki.com/wiki/Autopickup_exception)
OPTIONS=autopickup

# Automatically quiver some suitable weapon if your quiver empties when firing
OPTIONS=autoquiver

# Start the character permanently blind
OPTIONS=!blind

# Allow saving and loading bones files
OPTIONS=!bones

# Set the name of your starting cat
OPTIONS=catname:Morris

# Provides some additional command assistance when detecting anticipated mistakes
OPTIONS=cmdassist

# Enable color
OPTIONS=color

# Confirm attacks on peaceful creatures
OPTIONS=confirm

# Draw unseen (line-of-sight blocked) areas of lit rooms as if they were unlit
OPTIONS=!dark_room

# Controls the prompts at the end of the game
OPTIONS=disclose:+i +a +v +g +c +o

# Set the name of your starting dog
OPTIONS=dogname:Poochy

# An object's inventory letter sticks to it when it's dropped
OPTIONS=fixinv

# Commands asking for an inventory item will show a menu instead of a text query
OPTIONS=force_invmenu

# Set the name of the user-definable fruit
OPTIONS=fruit:bananas

# Sets the gender of your character
OPTIONS=gender:male

# whether to include gold in BUCX state
OPTIONS=!goldX

# Enable color for menu headers, window borders, message text, etc
OPTIONS=guicolor

# Ask if you want to see more information on an object
OPTIONS=help

# Visually distinguish pets from similar animals
OPTIONS=hilite_pet

# Visually distinguish piles of objects from individual objects
OPTIONS=hilite_pile

