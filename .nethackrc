OPTIONS=hilite_status: gold/up/yellow/down/brown

# Show a hit point bar graph behind your name and title
OPTIONS=hitpointbar

# Set the name of your starting horse
OPTIONS=horsename:Diablo

# Omit "uncursed" from inventory lists, if possible
OPTIONS=!implicit_uncursed

# Display an introductory message when starting the game
OPTIONS=legacy

# Distinguish visually between lit and unlit corridors
OPTIONS=!lit_corridor

# Give feedback when walking against a wall
OPTIONS=mention_walls

# Enable menu colors
OPTIONS=menucolors

# Controls the interface used when you need to choose various objects
OPTIONS=menustyle:full

