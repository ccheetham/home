# Number of message-window messages to save
#OPTIONS=msghistory:20

# Newest message first
OPTIONS=msg_window:reversed

# The name of your character
OPTIONS=name:ObiWanKenoob

# Read the NetHack news file at start of game
OPTIONS=news

# Start the character with no armor
OPTIONS=!nudist

# Move by letters; 'yuhjklbn'
OPTIONS=number_pad:0

# Set the order of item classes shown in inventory
#OPTIONS=packorder:")[%?+!=/(*`0_

# Specific situations where alternate prompting is desired
#OPTIONS=paranoid_confirmation:pray

# Show a permanent inventory window as a sidebar
OPTIONS=perm_invent

# Set your preferred pet type
# OPTIONS=pettype:...

# Prompt for confirmation before picking up items that will push encumbrance past level
OPTIONS=pickup_burden:unencumbered

# Try to pick up things that you threw
OPTIONS=pickup_thrown

# Specify the object types to be picked up when autopickup is on
OPTIONS=pickup_types:$?!/(

# Threshold at which the message "there are few/several/many objects here" is given
OPTIONS=pile_limit:5

# Allow selection of explore or debug modes
OPTIONS=playmode:normal

# If you wield something, push the old weapon into the alternate weapon slot
OPTIONS=pushweapon

# Set your character's race
OPTIONS=race:random

# Space waits for a turn
OPTIONS=!rest_on_space

# Set your character's role
OPTIONS=role:random

# Prevent you from attacking your pet by moving into it
OPTIONS=safe_pet

# Turn on debugging output when in wizard mode
OPTIONS=!sanity_check

# Control what part of hiscore list to show at the end of game
OPTIONS=scores:!t !a o

# Displays the experience points needed for next level
OPTIONS=showexp

# Uses the symbol for your race instead of @
OPTIONS=showrace

# Display a fancy ascii-graphics splash screen on startup
OPTIONS=splash_screen

# Stops your terminal's bell sounding
OPTIONS=silent

# Controls the sorting behavior of the pickup lists
OPTIONS=sortloot:loot

# Groups similar kinds of objects in your inventory
OPTIONS=sortpack

# Display sparkly effect for resisted magical attacks
OPTIONS=sparkle

# Uses standout mode (reverse video) for displaying "--More--"
OPTIONS=!standout

# Allow updates to the status lines at the bottom of the screen
OPTIONS=status_updates

# Exable status colors
OPTIONS=statushilites

# Whether your status bar has 2 or 3 lines
OPTIONS=statuslines:2

# Display elapsed game time, in turns, on the status line
OPTIONS=time

# Prints an ASCII tombstone when you die
OPTIONS=tombstone

# Enables the travel command
OPTIONS=travel

# Whether to display certain non-essential messages
OPTIONS=verbose

# Display coordinates after "look" description
OPTIONS=whatis_coord:none

# filtering the possible targets
OPTIONS=whatis_filter:none

# uses a menu to pick a target
OPTIONS=whatis_menu

# move by skipping the same glyphs
OPTIONS=!whatis_moveskip

# Use curses interface
OPTIONS=windowtype:curses

# path to a text file that contains a list of item names
#OPTIONS=wizkit:wizkit.txt

# See https://nethackwiki.com/wiki/Autopickup_exception
AUTOPICKUP_EXCEPTION="<^the "
AUTOPICKUP_EXCEPTION=">:0)"
AUTOPICKUP_EXCEPTION="> named empty"
AUTOPICKUP_EXCEPTION="> nothing"

