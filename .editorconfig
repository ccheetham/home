root = true

[*]
indent_size = 4
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8

[*.sh]
indent_size = 2

[*.{json,yml,yaml}]
indent_size = 2

[*.toml]
indent_size = 2

[*.xml]
indent_size = 2

[*.{csproj,fsproj}]
indent_size = 2

[*.go]
indent_style = tab

[{*.vim,.vimrc,.gvimrc}]
indent_size = 2
