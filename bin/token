#!/usr/bin/env bash

token_dir=$XDG_CONFIG_HOME/tokens

if [[ $# -eq 0 ]]; then
  echo "token name not specified" >&2
  exit 1
fi
token_name=$1
shift

if [[ $# -gt 0 ]]; then
  echo "specificy one and only one token name" >&2
  exit 1
fi

token_path="$token_dir/$token_name"

if [[ ! -f "$token_path" ]]; then
  exit 1
fi

cat "$token_path" | tr -d '\n'
