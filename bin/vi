#!/usr/bin/env bash

# =============================================================================
# vi wrapper
# -----------------------------------------------------------------------------
# to install xterm-256color-italic, run:
#   refresh terminfo
# =============================================================================

for term in xterm-256color-italic xterm-256color xterm-color xterm
do
    if infocmp $term > /dev/null 2>&1
    then
        TERM=$term
        break
    fi
done

exec vim $*
