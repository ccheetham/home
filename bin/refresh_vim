#!/usr/bin/env zsh


link_files() {
  pwd
  srcdir=$1
  tgtdir=$2
  cd $VIM_DIR
  /bin/mkdir -p $tgtdir
  cd $tgtdir
  for f in $srcdir/* ; do
    /bin/ln -s $f
  done
}

link_dir() {
  srcdir=$1
  tgtdir=$2
  cd $VIM_DIR
  /bin/mkdir -p $tgtdir
  cd $tgtdir
  /bin/ln -s $srcdir
}

VIM_DIR=$ME/.vim

cd $VIM_DIR
for d in autoload colors bundle; do
  /bin/rm -rf $d
  /bin/mkdir -p $d
done
(
  cd autoload
  for f in ../../var/repo/vim-pathogen/autoload/* ; do
    /bin/ln -s $f
  done
)
(
  cd colors
  for f in ../../var/repo/tomorrow-theme/vim/colors/* ; do
    /bin/ln -s $f
  done
)
(
  cd bundle
  /bin/ln -s ../../var/repo/nerdtree
)
