#!/usr/bin/env zsh

prog=$(basename $0)
basedir=$(dirname $0)/..
source $basedir/libexec/zsh/functions
execdir=$basedir/libexec/$prog

usage () {
    echo
    echo "  USAGE"
    echo "      $prog [options] TOOL"
    echo
    echo "  WHERE"
    echo "      TOOL            where TOOL one of: "
    if [ -d $execdir ]
    then
        local delim
        for cmd in $execdir/*
        do
            if [[ -f $cmd && -x $cmd ]]
            then
                echo "                          $(basename $cmd)"
            fi
        done
    else
        echo
        echo "!!! dispatch dir $execdir does not exist" >&2
    fi
    echo
    echo "  DESCRIPTION"
    echo "      Refresh the specified tool.  If tool not installed, install tool."
    echo
    echo "  OPTIONS"
    echo "      -h              display this message"
    echo
}

while getopts ":h" opt
do
    case $opt in
        h)
            usage
            exit
            ;;
        :)
            echo "-$OPTARG requires an argument" >&2
            echo "run with -h for help" >&2
            exit 1
            ;;
        \?)
            echo "invalid option -$OPTARG" >&2
            echo "run with -h for help" >&2
            exit 1
            ;;
    esac
done
shift $(($OPTIND-1))

if [ $# -eq 0 ]
then
    echo "command not specified; run with -h for help" >&2
    exit 1
fi

cmd=$execdir/$1
shift

if [ ! -x $cmd ]
then
    echo "command not found: $(basename $cmd)" >&2
    exit 1
fi

export QA_PROG=$prog
exec $cmd $@

# vim: ft=sh et sw=4 sts=4
