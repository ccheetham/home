if which qash > /dev/null 2>&1 ; then
    export QA_TC_SERVER_HOME=$(qash 'echo $QA_TC_SERVER_HOME')
    export QA_WEB_SERVER_HOME=$(qash 'echo $QA_WEB_SERVER_HOME')
    alias tca=$QA_TC_SERVER_HOME/tcruntime-admin.sh
    alias tcc=$QA_TC_SERVER_HOME/tcruntime-ctl.sh
    alias tci=$QA_TC_SERVER_HOME/tcruntime-instance.sh
fi

pvpn() {
    local pdir=~/etc/openvpn/pivotal
    if [[ ! -d $pdir ]] ; then
        echo "no vpn configurations in $pdir" >&2
        return 1
    fi
    if [[ $# > 1 ]] ; then
        echo "specify at most 1 destination" >&2
        return 1
    fi
    if [[ $# == 0 ]] ; then
        echo "available destinations:"
        echo "======================="
        for  i in $(/bin/ls $pdir) ; do
            echo $i
        done
        return
    fi
    local dest=$1
    if [[ ! -d $pdir/$dest ]] ; then
        echo "no vpn configuration for destination $dest" >&2
        return 1
    fi
    cd $pdir/$dest
    sudo openvpn config.ovpn
}

goapp() {
    cd ~/src/appsuite-qa
}

gotc() {
    cd ~/src/appsuite-qa/projects/tc-server-qa
}

alias tqa='clear; t proj:qa'
alias ttc='clear; t proj:tc'

