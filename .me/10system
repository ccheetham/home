for d in \
  /usr/bin \
  /bin \
  /usr/sbin \
  /sbin
; do
  remove_path $d
  append_path $d
done

for d in \
  /usr/local/sbin \
  /usr/local/bin \
; do
  prepend_path $d
done

if [[ -z $MANPATH ]] ; then
  MANPATH=/usr/local/share/man
else
  MANPATH=/usr/local/share/man:$MANPATH
fi

# vim: ft=zsh
