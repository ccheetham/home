# =============================================================================
# Docker
# -----------------------------------------------------------------------------
# https://www.docker.com/
# =============================================================================

alias d='docker'
alias d\?='d help'

# -----------------------------------------------------------------------------
# dman: convenience for 'man docker-CMD'
# -----------------------------------------------------------------------------
dman () {
    if [[ $# != 1 ]] ; then
        echo specify one and only one docker command
        return 1
    fi
    man docker-$1
}

# -----------------------------------------------------------------------------
# dbash: run image interactively via bash
# -----------------------------------------------------------------------------
dbash () {
    if [[ $# != 1 ]] ; then
        echo specify one and only one docker image
        return 1
    fi
    docker run -it --rm $1 bash
}

# -----------------------------------------------------------------------------
# drmx: remove exited containers
# -----------------------------------------------------------------------------
drmx () {
    docker ps --quiet --filter status=exited | xargs docker rm
}

# vim: ft=zsh
