alias py=python
alias py2=python2
alias py3=python3

pypath() {
    if [[ $# == 0 ]] ; then
        echo $PYTHONPATH | tr ':' '\n'
    else
        for p in $* ; do
            PYTHONPATH=$p:$PYTHONPATH
        done
        echo PYTHONPATH now:
        pypath
    fi
}

export PYTHONPATH=$ME_LIB_DIR/python
export PYTHONSTARTUP=$ME_LIBEXEC_DIR/pythonstartup.py

