# =============================================================================
# Git
# -----------------------------------------------------------------------------
# http://git-scm.com/
# =============================================================================

alias g='git'
alias g\?='g help'
alias gg='g status'
alias gc='g checkout'
alias gf='g fetch'
alias gm='g merge'
alias gp='g pull'
alias gd='g diff'
alias gR='g checkout -f'
alias gC='g commit'

ga () {
    if [[ $# == 0 ]] ; then
        git add .
    else
        git add $*
    fi
}

gP () {
    if [[ $# == 0 ]] ; then
        git push origin master
    else
        git push $*
    fi
}

