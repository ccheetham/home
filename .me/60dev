ME_ZSH_GIT_PROMPT=$ME_REPO_DIR/zsh-git-prompt
if [[ -f $ME_ZSH_GIT_PROMPT/zshrc.sh ]] ; then
  if grep '^export __GIT_PROMPT_DIR=~/.zsh/git-prompt' $ME_ZSH_GIT_PROMPT/zshrc.sh > /dev/null ; then
    sed -i '' 's:^export __GIT_PROMPT_DIR=~/.zsh/git-prompt:export __GIT_PROMPT_DIR=$ME_REPO_DIR/zsh-git-prompt:' $ME_ZSH_GIT_PROMPT/zshrc.sh
  fi
  source $ME_ZSH_GIT_PROMPT/zshrc.sh
else
  echo 'could not find $ME_ZSH_GIT_PROMPT/zshrc.sh (run refresh_repo?)'
fi

dev+() {
  if [[ -n "$ME_DEV" ]] ; then
    echo dev mode already active
    return
  fi
  ME_DEV=1
  ME_PROMPT="$PROMPT"
  PROMPT='%~ %b$(git_super_status) %# '
  cd $PWD
}

dev-() {
  if [[ -z "$ME_DEV" ]] ; then
    echo dev mode not active
    return
  fi
  PROMPT="$ME_PROMPT"
  unset ME_DEV
  unset ME_PROMPT
}

# vim: ft=zsh
