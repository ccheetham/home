[alias]
	br = branch
	ci = commit
	co = checkout
	cpick = cherry-pick
	d = diff
	dc = diff --cached
	ds = diff --compact-summary
	fp = fetch --prune --verbose
	l = log --pretty='%<(14)%C(magenta)%C(dim)%ar%Creset %C(cyan)%<(10)%al %C(yellow)%<(8)%h%Creset %s'
	last = log -1 HEAD
	ll = log --abbrev-commit
	m = merge
	mq = merge --squash
	orphan = switch --orphan
	p = pull
	pt = pull --tags
	ppt = push --tags
	pristine = ! git unstage && git checkout . && git clean -d --force
	rb = rebase
	rba = rb --abort
	rbc = rb --continue
	rbi = rb --interactive
	rollback = ! git reset --soft @~1 && git unstage
	show-files = show --pretty='' --name-status
	sw = switch
	tidy = ci -mtidy
	unstage = reset HEAD --
	wip = ci -mwip
[core]
	autocrlf = input
	pager = delta
	fsmonitor = true
[credential]
	helper = manager
[credential "helperselector"]
	selected = manager
[delta]
	features = chameleon
	navigate = true    # use n and N to move between diff sections
	line-numbers = true
	side-by-side = true
	true-color = always
[diff]
	colorMoved = default
[include]
	path = ~/var/repos/delta/themes.gitconfig
[init]
	defaultBranch = main
[interactive]
	diffFilter = delta --color-only
[merge]
	conflictstyle = diff3
	tool = vimdiff
[pull]
	rebase = true
[push]
	default = simple
	autoSetupRemote = true
[rebase]
	autoStash = true
[user]
	email = chris@cheetham.com
	name = Chris Cheetham
